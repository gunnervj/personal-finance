# Personal Finance Application Configuration - Server Deployment
# This is an example configuration for deployment on rudra.core server

# Domain/Hostname Configuration
APP_DOMAIN=rudra.core

# Port Configuration
FRONTEND_PORT=3000
KEYCLOAK_PORT=8080
USER_SERVICE_PORT=8081
BUDGET_SERVICE_PORT=8082
TRANSACTION_SERVICE_PORT=8083

# Database Configuration
POSTGRES_DB=personalfinance
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin

# Keycloak Admin Configuration
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# NextAuth Secret (change this to a random 32+ character string in production)
NEXTAUTH_SECRET=dev-secret-change-in-production-min-32-chars
