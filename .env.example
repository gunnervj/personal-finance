# Personal Finance Application Configuration
# Copy this file to .env and modify the values as needed

# Domain/Hostname Configuration
# For localhost: APP_DOMAIN=localhost
# For remote server: APP_DOMAIN=your-server-hostname
APP_DOMAIN=localhost

# Port Configuration
FRONTEND_PORT=3000
KEYCLOAK_PORT=8080
USER_SERVICE_PORT=8081
BUDGET_SERVICE_PORT=8082
TRANSACTION_SERVICE_PORT=8083

# Database Configuration
POSTGRES_DB=personalfinance
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin

# Keycloak Admin Configuration
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# NextAuth Secret (MUST be changed in production - minimum 32 characters)
NEXTAUTH_SECRET=dev-secret-change-in-production-min-32-chars
